{
  "cmake.generator": "Ninja",
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.configureSettings": {
    "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${workspaceFolder}/bin",
    "CMAKE_MAKE_PROGRAM": "C:/Program Files/Microsoft Visual Studio/2022/Community/Common7/IDE/CommonExtensions/Microsoft/CMake/Ninja/ninja.exe",
    "CMAKE_C_COMPILER": "cl.exe",
    "CMAKE_CXX_COMPILER": "cl.exe"
  },
  "cmake.configureEnvironment": {
    "VSCMD_SKIP_SENDTELEMETRY": "1"
  },
  "cmake.environment": {
    "PATH": "${env:PATH};C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.38.33130/bin/Hostx64/x64"
  },
  "files.encoding": "utf8",
  "terminal.integrated.profiles.windows": {
    "Command Prompt": {
      "path": "cmd.exe",
      "args": ["/k", "chcp 65001"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--header-insertion=never",
    "--query-driver=C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/Llvm/x64/bin/clang-cl.exe",
    "--compile-commands-dir=${workspaceFolder}/build"
  ],
  "C_Cpp.formatting": "vcFormat",
  "C_Cpp.vcFormat.indent.caseContents": true,
  "C_Cpp.vcFormat.indent.preprocessor": "none",
  "C_Cpp.vcFormat.indent.namespaceContents": true,
  "C_Cpp.vcFormat.space.beforeFunctionOpenParenthesis": "ignore",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
  "C_Cpp.intelliSenseEngine": "disabled",
  "clangd.checkUpdates": true,
  "clangd.onConfigChanged": "restart"
}
